<Window x:Class="PokedexUI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokedexUI.View"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MaxWidth="300" MinWidth="200" />
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0" DockPanel.Dock="Bottom">
            <TextBlock>Side menu</TextBlock>
        </DockPanel>
        <DockPanel Grid.Column="1" DockPanel.Dock="Bottom">
            <TextBlock>Content</TextBlock>
        </DockPanel>
    </Grid>
</Window>
